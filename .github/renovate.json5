{
  extends: [
    'github>camptocamp/gs-renovate-config-preset:base.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:group.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:stabilization-branches.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:ci.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:preset.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:pre-commit.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:docker.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:own.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:json-schema.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:shellcheck.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:python.json5#1.2.0',
    'github>camptocamp/gs-renovate-config-preset:security.json5#1.2.0',
  ],
  baseBranches: [
    '3.16',
    '3.22',
    '3.28-gdal3.6',
    '3.28-gdal3.7',
    '3.28-gdal3.8',
    '3.34-gdal3.7',
    '3.34-gdal3.8',
    '3.36-gdal3.8',
    '3.38-gdal3.8',
    '3.40-gdal3.10',
    '3.42-gdal3.10',
    'master',
  ],
  packageRules: [
    /** Less strict version for Docker images */
    {
      matchDatasources: ['docker'],
      versioning: 'loose',
    },
    /** Docker images version */
    {
      matchDatasources: ['docker'],
      versioning: 'regex:^(?<compatibility>.*)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$',
      matchDepNames: ['ghcr.io/osgeo/gdal'],
    },
    {
      matchDatasources: ['docker'],
      versioning: 'regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$',
      matchDepNames: ['python'],
    },
    /** Accept only the patch on stabilization branches */
    {
      matchBaseBranches: ['/^[0-9]+\\.[0-9]+$/', '/^[0-9]+\\.[0-9]+-gdal[0-9]+\\.[0-9]+$/'],
      matchUpdateTypes: ['major', 'minor', 'pin', 'digest', 'lockFileMaintenance', 'rollback', 'bump'],
      enabled: false,
    },
    /** Disable upgrading the supported Python version */
    {
      matchFileNames: ['pyproject.toml'],
      enabled: false,
      matchDepNames: ['python'],
    },
    /** Only LTS version of Node */
    {
      allowedVersions: '/(0|2|4|6|8)$/',
      enabled: false,
      matchDepNames: ['node'],
    },
    /** Group the Python update of the acceptance image */
    {
      matchFileNames: ['acceptance_tests/*'],
      automerge: true,
      groupName: 'acceptance tests Python',
      matchDepNames: ['python'],
    },
    /** Packages published very recently are not pushed to stabilization branches for security reasons */
    {
      matchBaseBranches: ['/^[0-9]+\\.[0-9]+$/', '/^[0-9]+\\.[0-9]+-gdal[0-9]+\\.[0-9]+$/'],
      minimumReleaseAge: '7 days',
    },
    /** Ungroup Gdal major and minor versions */
    {
      matchDepNames: ['ghcr.io/osgeo/gdal'],
      matchUpdateTypes: ['major', 'minor'],
      groupName: 'gdal',
    },
  ],
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
}
