#!/bin/bash -eux

if [ $# -gt 0 ]
then
  TAG="$1"
elif [[ "${GITHUB_REF}" =~ ^refs/tags/.* ]]
then
  TAG=$(echo "${GITHUB_REF}"|sed 's|^refs/tags/||g')
elif [[ "${GITHUB_REF}" =~ ^refs/heads/.* ]]
then
  TAG=$(echo "${GITHUB_REF}"|sed 's|^refs/heads/||g')
  TAG=${TAG//\//_}
else
  echo Wrong ref: ${GITHUB_REF}
  exit 2
fi

docker tag camptocamp/qgis-server camptocamp/qgis-server:${TAG}
docker push camptocamp/qgis-server:${TAG}
docker tag camptocamp/qgis-server:latest-desktop camptocamp/qgis-server:${TAG}-desktop
docker push camptocamp/qgis-server:${TAG}-desktop
